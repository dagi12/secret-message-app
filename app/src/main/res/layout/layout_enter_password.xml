<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/enter_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/enter_password_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Podaj hasło"
        android:inputType="text"
        android:maxLines="1"
        />

    <Button
        android:id="@+id/enter_password_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Kontynuuj"
        />

    <Button
        android:id="@+id/password_change_auth_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zmień sposób autoryzacji"

        />

</LinearLayout>